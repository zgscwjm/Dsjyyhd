<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/topbar_high"
    android:background="@color/mblue" >

    <ImageButton
        android:layout_centerVertical="true"
        android:layout_width="@dimen/topbar_btnback"
        android:layout_height="@dimen/topbar_btnback"
        android:layout_marginStart="@dimen/topbar_btnback_m_l"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:background="@color/mnull"
        android:src="@drawable/btn_back" />

    <TextView
        android:id="@+id/tv_toptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="这个是测试"
        android:textSize="@dimen/basetextseiz_l"
        android:textColor="@android:color/white" />

    <ImageView
        android:layout_alignParentEnd="true"
        android:background="@color/mnull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>